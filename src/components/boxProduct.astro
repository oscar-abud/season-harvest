---
// Props del componente
interface Producto {
    amount: number;
    unit: string;
    name: string;
}

const { title, precio, tipoBox, productos = [], productos2 = [] } = Astro.props;

import IconoWsp from "../components/icons/wsp.jsx";
---

<div class="product-card">
    <h2 class="card-title">{title}</h2>

    <div class="product-list">
        <h3 class="list-label">Lista Productos</h3>
        <div class="listaProductos">
            <div class="column">
                <ul>
                    {
                        productos.map((item: Producto) => (
                            <li>
                                {item.amount} <span>{item.unit}</span>{" "}
                                {item.name}
                            </li>
                        ))
                    }
                </ul>
            </div>
            <div class="column">
                <ul>
                    {
                        productos2.map((item: Producto) => (
                            <li>
                                {item.amount} <span>{item.unit}</span>{" "}
                                {item.name}
                            </li>
                        ))
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="price-box">
        <div class="price-boxLeft">
            <a
                href={`https://wa.me/+56966177010?text=Hola,%20quisiera%20solicitar%20el%20box%20${encodeURIComponent(tipoBox)}.`}
                target="_blank"
                rel="noopener noreferrer"
            >
                <IconoWsp className="blanco" />
                Quiero este producto
            </a>
        </div>
        <div class="price-boxRight">
            <p>VALOR BOX</p>
            <span>${precio}</span>
        </div>
    </div>
</div>

<style>
    .product-card {
        background-color: var(--white-color);
        border-radius: 1rem;
        padding: 2rem 1rem;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        font-family: sans-serif;
        color: var(--dark-color);
        width: 370px;
        max-width: 700px;
        margin: 0 auto;
        height: 460px;
        display: flex;
        flex-direction: column;
    }

    .card-title {
        font-family: sans-serif;
        font-size: 27px;
        color: var(--green-color);
        text-align: center;
        margin-bottom: 1rem;
    }

    .product-list {
        flex: 1 1;
    }

    .list-label {
        font-family: sans-serif;
        background-color: var(--violet-color);
        color: var(--yellow-color);
        padding: 0.5rem 1rem;
        font-size: 17px;
        border-radius: 5px;
        margin-bottom: 1rem;
        text-transform: uppercase;
        font-weight: 600;
    }

    .listaProductos {
        display: flex;
        align-items: start;
        justify-content: space-between;
    }

    .column {
        flex: 1;
    }

    .column ul {
        list-style: none;
        padding-left: 0;
        margin: 0;
    }

    li {
        font-size: 1rem;
        margin-bottom: 0.5rem;
        text-align: left;
    }

    li span {
        font-weight: 600;
        color: var(--green-color);
    }

    .price-box {
        display: flex;
        justify-content: space-around;
        align-items: center;
    }

    .price-boxLeft a {
        display: flex;
        width: 100%;
        gap: 5px;
        align-items: center;
        padding: 5px 10px;
        background-color: var(--green-color);
        border-radius: 5px;
        align-items: center;
        text-decoration: none;
        color: var(--white-color);
        transition: transform 0.3s ease-in-out;
    }

    .price-boxLeft a:hover {
        transform: scale(1.03);
    }

    .price-box p {
        font-size: 17px;
        color: var(--green-color);
        font-weight: 600;
    }

    .price-box span {
        color: var(--green-color);
        font-size: 25px;
        font-weight: 800;
    }

    @media screen and (max-width: 1085px) {
        .product-card {
            padding: 1rem 0.5rem;
            margin: 20px auto;
        }
    }
</style>
