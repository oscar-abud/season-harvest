    <Header />

    <div class="containerClientes">
      <h1>Productos Clientes</h1>
      <div class="containerProductos">
        <!-- Caja Familiar -->
        <CajaProducto
          title="Box Familiar"
          tipoBox="familiar"
          precio="43.990"
          productos={boxFamiliar1}
          productos2={boxFamiliar2}
        />
        <!-- Caja pareja -->
        <CajaProducto
          title="Box Pareja"
          tipoBox="pareja"
          precio="29.990"
          productos={boxPareja1}
          productos2={boxPareja2}
        />
        <!-- Caja Individual -->
        <CajaProducto
          title="Box Individual"
          tipoBox="individual"
          precio="22.990"
          productos={boxIndividual1}
          productos2={boxIndividual2}
        />
        <!-- Tarjeta para agregar mas productos -->
        <AgregarProducto products={productos} />
      </div>
    </div>

    <div class="containerMapa">
      <div class="header">
        <h1>Mapa de despachos</h1>
